SET @start_global_value = @@global.partition_scan_max;
SELECT @start_global_value;

#
# exists as global and session
#
select @@global.partition_scan_max;
select @@session.partition_scan_max;
show global variables like 'partition_scan_max';
show session variables like 'partition_scan_max';

select *
from information_schema.global_variables
where variable_name='partition_scan_max';

select *
from information_schema.session_variables
where variable_name='partition_scan_max';

#
# show that it's writable
#
set global partition_scan_max=10;
select @@global.partition_scan_max;
set session partition_scan_max=10;
select @@session.partition_scan_max;

set global partition_scan_max=0;
select @@global.partition_scan_max;
set session partition_scan_max=0;
select @@session.partition_scan_max;

set global partition_scan_max=4294967295;
select @@global.partition_scan_max;
set session partition_scan_max=4294967295;
select @@session.partition_scan_max;

set session partition_scan_max=default;
select @@session.partition_scan_max;
set global partition_scan_max=default;
select @@global.partition_scan_max;
set session partition_scan_max=default;
select @@session.partition_scan_max;

#
# Incorrect assignments
#

# Allowed value range: (0, UINT_MAX32)
# Value lower than allowed range
set global partition_scan_max=-1;
select @@global.partition_scan_max;
set session partition_scan_max=-1;
select @@session.partition_scan_max;

# Value higher than allowed range
set global partition_scan_max=4294967296;
select @@global.partition_scan_max;
set session partition_scan_max=4294967296;
select @@session.partition_scan_max;

# Incompatible value types
--error ER_WRONG_TYPE_FOR_VAR
set global partition_scan_max=1.1;
--error ER_WRONG_TYPE_FOR_VAR
set global partition_scan_max=1e1;
--error ER_WRONG_TYPE_FOR_VAR
set global partition_scan_max="foobar";

SET @@global.partition_scan_max = @start_global_value;
SELECT @@global.partition_scan_max;
